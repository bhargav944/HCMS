<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#fff"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:contentPadding="5dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ImageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/loadingimage"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/Header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Header"
            android:textSize="25dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textColor="@color/dot_inactive_screen2"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="23dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/DayOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Day 1"
            android:textSize="25dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textColor="@color/dot_inactive_screen2"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/DayOneDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Day 1 Detail"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="20dp"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/DayTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Day 2"
            android:textSize="25dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textColor="@color/dot_inactive_screen2"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/DayTwoDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Day 2 Detail"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="20dp"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/DayThree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Day 3"
            android:textSize="25dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textColor="@color/dot_inactive_screen2"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/DayThreeDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Day 3 Detail"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="20dp"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="5dp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>