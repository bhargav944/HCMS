<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#fff"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:contentPadding="5dp"
    app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/rmTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textSize="30dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/LightBlue"
                android:gravity="center"/>

            <TextView
                android:id="@+id/rmDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textColor="@color/dot_inactive_screen2"
                android:textSize="25dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/rmFollowing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Following Title"
                android:textSize="20dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginTop="15dp"/>

            <TextView
                android:id="@+id/rmQuads"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quads Title"
                android:textSize="20dp"
                android:textColor="@color/colorBlack"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/rmQuadsDescrp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quads Description"
                android:textSize="20dp"
                android:textColor="@color/colorBlack"
                android:layout_marginTop="15dp"/>

            <TextView
                android:id="@+id/rmQuadsDescrp1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quads Description 1"
                android:textSize="20dp"
                android:textColor="@color/colorBlack"
                android:layout_marginTop="15dp"/>

            <TextView
                android:id="@+id/rmQuadsDescrp2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quads Description 2"
                android:textSize="20dp"
                android:textColor="@color/colorBlack"
                android:layout_marginTop="15dp"/>

        </LinearLayout>

</androidx.cardview.widget.CardView>